page {
  margin-bottom: 90rpx;
}
.receive_address_row .address_btn button {
  padding: 20rpx 0;
}
.receive_address_row .user_info_row {
  padding: 10rpx;
  display: flex;
}
.receive_address_row .user_info_row .user_info {
  flex: 5;
}
.receive_address_row .user_info_row .user_phone {
  flex: 2;
  text-align: right;
}
.cart_content {
  display: flex;
  flex-direction: column;
}
.cart_content .cart_title {
  padding: 20rpx;
  font-size: 36rpx;
  border-bottom: 1rpx solid var(--themeColor);
  border-top: 1rpx solid var(--themeColor);
}
.cart_content .cart_main .cart_item {
  display: flex;
  padding: 10rpx;
  border-bottom: 1rpx solid #ccc;
}
.cart_content .cart_main .cart_item .cart_chk_wrap {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_content .cart_main .cart_item .cart_image_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_content .cart_main .cart_item .cart_image_wrap image {
  width: 70%;
}
.cart_content .cart_main .cart_item .cart_info_wrap {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_name {
  color: #ccc;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap {
  display: flex;
  justify-content: space-between;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap .goods_price {
  color: var(--themeColor);
  font-size: 40rpx;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap .cart_num_tool {
  display: flex;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap .cart_num_tool .num_edit {
  border: 1rpx solid #ccc;
  height: 55rpx;
  width: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap .cart_num_tool .goods_num {
  height: 55rpx;
  width: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.footer_tool {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  border-top: 1rpx solid #ccc;
  display: flex;
}
.footer_tool .all_chk_wrap {
  display: flex;
  justify-content: center;
  align-items: center;
}
.footer_tool .total_price_wrap {
  flex: 4;
  display: flex;
  flex-direction: column;
  text-align: right;
}
.footer_tool .total_price_wrap .total_price .total_price_text {
  color: var(--themeColor);
  font-size: 36rpx;
}
.footer_tool .total_price_wrap .total_yf {
  font-size: 20rpx;
}
.footer_tool .order_pay_wrap {
  background-color: var(--themeColor);
  color: #ffffff;
  font-size: 30rpx;
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
