.first_tab navigator {
  display: flex;
  border-bottom: 2rpx solid #ccc;
}
.first_tab navigator .goods_image_wrap {
  display: flex;
  flex: 2;
  justify-content: center;
  align-items: center;
}
.first_tab navigator .goods_image_wrap image {
  width: 80%;
  height: 80%;
}
.first_tab navigator .goods_info_wrap {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.first_tab navigator .goods_info_wrap .goods_info {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.first_tab navigator .goods_info_wrap .goods_price {
  color: var(--themeColor);
  font-size: 32rpx;
}
